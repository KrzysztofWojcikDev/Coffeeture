<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coffeeture">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Coffeeture">
        <activity android:name=".Activities.RisingActivity"
            android:parentActivityName=".Activities.DrinkSelectionActivity"/>
        <activity android:name=".Activities.OptionsActivity"
            android:parentActivityName=".Activities.DrinkSelectionActivity"/>
        <activity android:name=".Activities.SmallDrinkSelectionActivity"
            android:parentActivityName=".Activities.DrinkSelectionActivity"/>
        <activity android:name=".Activities.CustomDrinkSelectionActivity"
            android:parentActivityName=".Activities.DrinkSelectionActivity"/>
        <activity android:name=".Activities.SettingDrinkActivity"
            android:parentActivityName=".Activities.DrinkSelectionActivity"/>
        <activity android:name=".Activities.ImplementingDrinkActivity"
            android:parentActivityName=".Activities.DrinkSelectionActivity"/>
        <activity android:name=".Activities.AnnouncementActivity"
            android:parentActivityName=".Activities.DrinkSelectionActivity"/>
        <activity android:name=".Activities.DrinkSelectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>